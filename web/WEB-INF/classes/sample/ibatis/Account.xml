<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Account">
	<typeAlias alias="Account" type="sample.domain.Account" />

	<delete id="delete" parameterClass="String">
		delete from account where id = #id#
	</delete>

	<insert id="add" parameterClass="Account">
		insert into account (id, password, name) values(#id#, #password#, #name#)
 	</insert>
 	
	<update id="update" parameterClass="Account">
		update account set password = #password#, name = #name# where id = #id#
	</update>
 	
	<select id="get" parameterClass="String" resultClass="Account">
		select * from account where id = #id#
 	</select>

	<select id="list" resultClass="Account">
		select * from account order by id
 	</select>
</sqlMap>